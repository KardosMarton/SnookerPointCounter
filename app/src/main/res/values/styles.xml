<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">#4CAF50</item>
    </style>

<style name="Player1Name">
    <item name="android:textSize">25sp</item>
    <item name="android:gravity">center</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#D32F2F</item>
</style>

    <style name="Player2Name">
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1976D2</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:clickable">false</item>
        <item name="android:text">0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">35sp</item>
    </style>

<style name="FrameWinPoints">
    <item name="android:gravity">center</item>
    <item name="android:textSize">30sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#424242</item>
</style>

    <style name="AllFrameWin">
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Separator">
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#D32F2F</item>
    </style>

    <style name="StatisticPlayerOne">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#E6EE9C</item>
        <item name="android:text">0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:layout_below">@id/txt_statistic</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginLeft">7dp</item>
    </style>

    <style name="StatisticPlayerTwo">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#29B6F6</item>
        <item name="android:text">0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:layout_below">@id/txt_statistic</item>
        <item name="android:layout_marginTop">13dp</item>
    </style>

</resources>
